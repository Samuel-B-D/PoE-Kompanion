<Application
   xmlns="https://github.com/avaloniaui"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   x:Class="PoEKompanion.App"
   RequestedThemeVariant="Default"
>
   <Application.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <MergeResourceInclude Source="Themes/_Index.axaml" />
         </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
   </Application.Resources>
   
   <Application.Styles>
      <!-- <SimpleTheme /> -->
      <StyleInclude Source="/Styles/PoETheme.axaml" />
   </Application.Styles>
   
   <TrayIcon.Icons>
      <TrayIcons>
         <TrayIcon Icon="/Assets/poe-kompanion.ico" 
                   ToolTipText="PoE Kompanion">
            <TrayIcon.Menu>
               <NativeMenu>
                  <NativeMenuItem Header="Configure" Click="ConfigureAction" />
                  <NativeMenuItem Header="Exit" Click="ExitAction" />
               </NativeMenu>
            </TrayIcon.Menu>
         </TrayIcon>
      </TrayIcons>
   </TrayIcon.Icons>
</Application>